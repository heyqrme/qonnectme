
rules_version = '2';

// See https://firebase.google.com/docs/storage/security
service firebase.storage {
  match /b/{bucket}/o {
    // Match any file within a user's avatar directory.
    match /avatars/{userId}/{fileName} {
      // Anyone can read profile pictures. This is necessary for other users
      // to see them across the application.
      allow read: if true;

      // Only the authenticated user is allowed to write (upload, update, delete)
      // to their own avatar directory. The userId in the path must match the
      // UID of the user making the request.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
