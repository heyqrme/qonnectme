
rules_version = '2';

// See https://firebase.google.com/docs/storage/security
service firebase.storage {
  match /b/{bucket}/o {

    // Rules for all files under the 'avatars' directory
    match /avatars/{userId}/{allPaths=**} {
      // Anyone can read profile pictures. This is necessary for other users
      // to see them.
      allow read: if true;

      // Only the authenticated user is allowed to write (upload, update, delete)
      // to their own avatar directory.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
