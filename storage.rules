
rules_version = '2';

// See https://firebase.google.com/docs/storage/security
service firebase.storage {
  match /b/{bucket}/o {

    // Grant public read access to all files under the 'avatars' directory.
    // This allows anyone to view profile pictures.
    match /avatars/{allPaths=**} {
      allow read: if true;
    }

    // Grant write access only to the authenticated user for their own avatar directory.
    // This ensures a user can only upload or delete their own photos.
    match /avatars/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
