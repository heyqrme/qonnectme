/**
 * @description This ruleset enforces a strict user-ownership model where each user can only access their own data.
 * All data is nested under /users/{userId}, ensuring clear ownership.
 * No user listing is allowed for security.
 * Key Security Decisions: Disallows user listing, enforces owner-only access.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces access control for user profile documents. Only the authenticated user can read or write their own profile.
     * @path /users/{userId}/profile/{profileDocId}
     * @allow (create, update, delete, get, list) if the authenticated user ID matches the userId in the path.
     * @deny (create, update, delete, get, list) if the authenticated user ID does not match the userId in the path.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/profile/{profileDocId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    /**
     * @description Enforces access control for user QR code documents. Only the authenticated user can read or write their own QR code.
     * @path /users/{userId}/qrCode
     * @allow (create, update, delete, get, list) if the authenticated user ID matches the userId in the path.
     * @deny (create, update, delete, get, list) if the authenticated user ID does not match the userId in the path.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/qrCode/{qrCodeId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    /**
     * @description Enforces access control for user theme documents. Only the authenticated user can read or write their own theme.
     * @path /users/{userId}/theme
     * @allow (create, update, delete, get, list) if the authenticated user ID matches the userId in the path.
     * @deny (create, update, delete, get, list) if the authenticated user ID does not match the userId in the path.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/theme/{themeId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    /**
     * @description Enforces access control for user music documents. Only the authenticated user can read or write their own music.
     * @path /users/{userId}/musics/{musicId}
     * @allow (create, update, delete, get, list) if the authenticated user ID matches the userId in the path.
     * @deny (create, update, delete, get, list) if the authenticated user ID does not match the userId in the path.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/musics/{musicId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    /**
     * @description Enforces access control for user photo documents. Only the authenticated user can read or write their own photo.
     * @path /users/{userId}/photos/{photoId}
     * @allow (create, update, delete, get, list) if the authenticated user ID matches the userId in the path.
     * @deny (create, update, delete, get, list) if the authenticated user ID does not match the userId in the path.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/photos/{photoId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    /**
     * @description Enforces access control for user video documents. Only the authenticated user can read or write their own video.
     * @path /users/{userId}/videos/{videoId}
     * @allow (create, update, delete, get, list) if the authenticated user ID matches the userId in the path.
     * @deny (create, update, delete, get, list) if the authenticated user ID does not match the userId in the path.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/videos/{videoId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    /**
     * @description Rules for the top-level 'usernames' collection.
     * This collection is used for username uniqueness checks.
     */
    match /usernames/{username} {
      // Anyone can check if a username exists.
      allow get: if true;
      
      // A user can only create a username document for themselves.
      // The document ID (username) can be anything, but the 'uid' field must match their own.
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      
      // A user can only delete their own username document.
      allow delete: if request.auth != null && resource.data.uid == request.auth.uid;
      
      // Users cannot update username documents, they must delete and create.
      allow update: if false;
    }
  }
}
